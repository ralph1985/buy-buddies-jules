{
  "version": 2,
  "env": {
    "BUGSNAG_API_KEY": "@bugsnag_api_key"
  },
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      },
      "build": {
        "env": {
          "VITE_BUGSNAG_API_KEY": "@bugsnag_api_key"
        }
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index"
    },
    {
      "source": "/",
      "destination": "/client/"
    },
    {
      "source": "/(.*)",
      "destination": "/client/$1"
    }
  ]
}
